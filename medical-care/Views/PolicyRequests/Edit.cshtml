            var start = moment();
            var end = moment().add(365, 'days');

            function cb(start, end) {
                $('input[name="dateRange"]').val(start.format('MM/DD/YYYY') + ' - ' + end.format('MM/DD/YYYY'));
            }

            $('input[name="dateRange"]').daterangepicker({
                startDate: start,
                endDate: end,
                locale: { format: 'MM/DD/YYYY' }
            }, cb);

            cb(start, end);
        });
    </script>
