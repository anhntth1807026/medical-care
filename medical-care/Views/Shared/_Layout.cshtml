@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>MedicalCare Dashboard</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">

    <link href="~/Content/css/main.css" rel="stylesheet">

    @Scripts.Render("~/bundles/jquery")
    <style>
        table {
            width: 100%;
        }

        #example_filter {
            float: right;
        }

        #example_paginate {
            float: right;
        }

        label {
            display: inline-flex;
            margin-bottom: .5rem;
            margin-top: .5rem;
        }
    </style>
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <!--    Navbar-->
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <img src="https://www.medicare.vn/CMSPages/GetFile.aspx?guid=cb261630-31f1-451b-b004-9cc69f6e7905" alt="medicare" style="width: 110px" />
            </div>
            <div class="app-header__content">
                <div class="app-header-left">
                    
                    <ul class="header-menu nav">
                        <li class="nav-item">
                            <i class="nav-link-icon fa fa-home"> </i>
                            @Html.ActionLink("Home", "Index", "PolicyClient")
                        </li>
                    </ul>
                </div>
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                
                                <div class="widget-content-right header-user-info ml-3">
                                    @*<button type="button" class="btn-shadow p-1 btn btn-primary btn-sm show-toastr-example">
                                            <i class="fa text-white fa-calendar pr-1 pl-1"></i>
                                        </button>*@
                                    @Html.Partial("_LoginPartial")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--    Main Content-->
        <div class="app-main">
            <!--    Navigation-->
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    @*<div class="header__pane ml-auto">
                            <div>
                                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic"
                                        data-class="closed-sidebar">
                                    <span class="hamburger-box">
                                        <span class="hamburger-inner"></span>
                                    </span>
                                </button>
                            </div>
                        </div>*@
                </div>
                @*<div class="app-header__mobile-menu">
                        <div>
                            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                    <div class="app-header__menu">
                        <span>
                            <button type="button"
                                    class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                                <span class="btn-icon-wrapper">
                                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                                </span>
                            </button>
                        </span>
                    </div>*@
                <div class="scrollbar-sidebar">
                    @*<div class="app-sidebar__inner">*@
                    <ul class="vertical-nav-menu">


                        <li class="app-sidebar__heading ">
                            <i class="metismenu-icon pe-7s-graph position-sticky opacity-8"></i>
                            @Html.ActionLink("Dashboard", "Index", "Chart")
                        </li>

                        <li class="app-sidebar__heading nav m-2">Main Manage</li>
                        <li>
                            <a href="#">
                                <i class="metismenu-icon pe-7s-users position-sticky opacity-8"></i>Manager User
                                <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                            </a>
                            <ul>
                                <li class="nav">
                                    <i class="metismenu-icon pe-7s-users position-sticky opacity-8 "></i>&nbsp;
                                    @Html.ActionLink("User", "Index", "ManageUser")
                                </li>
                                <li class="nav">
                                    <i class="metismenu-icon pe-7s-id position-sticky opacity-8"></i>
                                    @Html.ActionLink("Role", "Index", "ManageRole")
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">
                                <i class="metismenu-icon pe-7s-id position-sticky opacity-8"></i>Manage Policy
                                <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                            </a>
                            <ul>
                                <li class="nav">
                                    <i class="metismenu-icon pe-7s-news-paper position-sticky opacity-8"></i>
                                    @Html.ActionLink("Policies", "Index", "Policies")
                                </li>
                                <li class="nav">
                                    <i class="metismenu-icon pe-7s-id position-sticky opacity-8"></i>
                                    @Html.ActionLink("Policy On Employees", "Index", "PolicyOnEmps")
                                </li>
                            </ul>
                        </li>
                        <li>
                            <i class="metismenu-icon pe-7s-culture position-sticky opacity-8"></i>
                            @Html.ActionLink("Companies", "Index", "Companies")
                        </li>
                        <li>
                            <i class="metismenu-icon pe-7s-culture position-sticky opacity-8 "></i>
                            @Html.ActionLink("Hospitals", "Index", "Hospitals")
                        </li>
                        <li>
                            <i class="metismenu-icon pe-7s-paper-plane position-sticky opacity-8"></i>
                            @Html.ActionLink("Contact Us", "Index", "ContactUs")
                        </li>
                    </ul>
                    @*</div>*@
                </div>
            </div>
            <div class="app-main__outer">
                @RenderBody()
                <hr />
            </div>
        </div>

    </div>
    <script type="text/javascript" src="~/Content/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/Content/scripts/main.js"></script>
    <script type="text/javascript" src="https://cdn.rawgit.com/cloudinary/cloudinary_js/master/js/jquery.ui.widget.js"></script>
    <script type="text/javascript" src="https://rawgit.com/cloudinary/cloudinary_js/master/js/jquery.iframe-transport.js"></script>
    <script type="text/javascript" src="https://rawgit.com/cloudinary/cloudinary_js/master/js/jquery.fileupload.js"></script>
    <script type="text/javascript" src="https://rawgit.com/cloudinary/cloudinary_js/master/js/jquery.cloudinary.js"></script>

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/Content/ckeditor/ckeditor.js"></script>


    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/daterange")
    @RenderSection("jsFooter", required: false)
</body>
</html>
